{
  "name": "forbex-contact",
  "license": "mit",
  "description": "App para el manejo de consultas de Forbex",
  "keywords": [
    "react",
    "example"
  ],
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "^2.11.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.3",
    "@mui/lab": "^5.0.0-alpha.50",
    "@mui/material": "^5.0.3",
    "@mui/styles": "^5.0.1",
    "@mui/x-data-grid": "^5.0.0-beta.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cross-env": "^7.0.3",
    "date-fns": "^2.25.0",
    "electron-is-dev": "^2.0.0",
    "firebase": "^8.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "tachyons": "^4.12.0",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "concurrently": "^6.3.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.2",
    "prettier": "^2.4.1"
  },
  "build": {
    "icon": "public/icon.png",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "Business",
      "darkModeSupport": true
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "web-start": "react-scripts start",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "web-build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "electron-build": "electron-builder",
    "release": "yarn web-build && electron-builder --publish=always",
    "build": "yarn web-build && yarn electron-build -c.mac.identity=null",
    "start": "concurrently \"cross-env BROWSER=none yarn web-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix",
      "git add"
    ]
  }
}
